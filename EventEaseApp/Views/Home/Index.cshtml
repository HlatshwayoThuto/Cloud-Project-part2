@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .welcome-section {
        padding: 80px 20px;
    }

        .welcome-section h1 {
            font-size: 3rem;
            font-weight: 700;
        }

        .welcome-section p {
            font-size: 1.2rem;
        }

    .welcome-buttons a {
        min-width: 180px;
    }
</style>

<div class="container welcome-section text-center">
    <h1 class="mb-4">Welcome to EventEase</h1>
    <p class="lead mb-5">
        Your all-in-one platform to explore venues, discover events, and book with ease.
    </p>

    <div class="d-flex justify-content-center gap-4 flex-wrap welcome-buttons">
        <a href="/Venue" class="btn btn-outline-light btn-lg">Explore Venues</a>
        <a href="/Events" class="btn btn-outline-warning btn-lg">View Events</a>
        <a href="/Booking" class="btn btn-outline-success btn-lg">Make a Booking</a>
    </div>
</div>
