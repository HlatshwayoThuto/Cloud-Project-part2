@model IEnumerable<EventEaseApp.Models.Booking>

@{
    ViewData["Title"] = "Booking Information";
}

<h1>Index</h1>

<!--Add search from here-->
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder = "Search by Booking ID, Event, or Venue"/>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<!--success messages-->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!--Show error message-->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["ErrorMessage"]
    </div>
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               BookingID
            </th>
            <th>
               Venue
            </th>
            <th>
               Events
            </th>
             <th>
               Booking Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var booking in Model) {
        <tr>
            <td>
                @booking.BookingID
            </td>
             <td>
                 @booking.Venue?.VenueName
            </td>
            <td>
                 @booking.Events?.EventName
            </td>
            <td>
                 @booking.BookingDate
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@booking.BookingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@booking.BookingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@booking.BookingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
